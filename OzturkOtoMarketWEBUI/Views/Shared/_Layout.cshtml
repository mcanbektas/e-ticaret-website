<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FPPRO</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/theme/css/style.css">
</head>
<body>


    <nav class="navbar navbar-expand-lg bg-success border-bottom border-body" data-bs-theme="dark">

        <div class="container-md">

            <a class="navbar-brand" href="#">FPPRO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/List">Ürünler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","About")">Hakkımızda</a>
                    </li>
                    <li class="my-list-item" style="margin-top:5px;  " >
                        <a href="/Category" class="my-button" style="padding: 8px 16px; /* Daha küçük bir buton */ font-size: 14px; /* Daha küçük yazı boyutu */ cursor: pointer; background-color: brown; color: #fff; border: none; border-radius: 5px; transition: background-color 0.3s ease, transform 0.3s ease; text-decoration: none; margin-top: 5px;">Yönetici Sayfası</a>
                    </li>

                </ul>
                @Html.Action("Summary","Cart")
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </nav>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


    <div class="container-md">
        @RenderBody()
        </div>



        <script src="/theme/js/holder.min.js" type="text/javascript"></script>

        <div class="footer">
            <footer class="footer mt-auto py-3 bg-body-tertiary">
                <div class="container">
                    <span class="text-body-secondary">FPPRO satış mağazası Telif Hakları Saklıdır.</span>
                </div>
            </footer>
        </div>



</body>


</html>